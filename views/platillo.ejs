<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>CRUD Deli-Delivery</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <link rel="stylesheet" href="/resources/css/index.css">
    </head>
    <body>
        <section class="contenedor">
            <div class="contEditarPlatillo container my-3 shadow px-md-3 py-3  rounded-3 bg-white">
                <form method="POST" action="/editar/platillo<%=id%>?_method=put" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-5 col-md-4 col-lg-3 p-1 d-flex flex-column align-items-center justify-content-center py-md-2">
                            <div class="conImagen">
                                <img class="imagenEditarPlatillo rounded-2" src="<%= imagen %>" alt="">;
                                <input class="inputImagenPlatillo form-control form-control-sm shadow-sm d-none" type="file" name="imagen" id="formFile"> 
                            </div>
                        </div>
                        
                        <div class="datos col-7 col-md-8 col-lg-9 position-relative d-flex flex-column justify-content-evenly">
                            <% if(estatus == "Activo"){ %>
                                    <div class="form-check form-switch position-absolute top-0 end-0 mt-2 me-3">
                                        <input class="form-check-input" type="checkbox" role="switch" id="checkActivarEditarRestaurante" name="estatus" checked>
                                        <label class="form-check-label" for="checkpActivarEditarRestaurante"><strong class="text-primary"><%=estatus%></strong></label>
                                    </div>
                            <%}else{ %>
                                <div class="form-check form-switch position-absolute top-0 end-0 mt-2 me-3">
                                    <input class="form-check-input" type="checkbox" role="switch" id="checkActivarEditarRestaurante" name="estatus">
                                    <label class="form-check-label" for="checkpActivarEditarRestaurante"><strong class="text-primary"><%=estatus%></strong></label>
                                </div>
                            <% } %>
    
                            <div class="col-5 col-md-3 col-lg-2 mt-2">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text" id="inputGroup-sizing-sm">Id</span>
                                    <input type="text" class="idRestaurante form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" value="<%= id %>" name="id" disabled>
                                </div>
                            </div>
                            
                            <div class=" col-7 col-md-6 col-lg-4 mt-3 m-md-0">
                                <div class="input-group input-group-sm shadow-sm">
                                    <span class="input-group-text" id="inputGroup-sizing-sm">Precio</span>
                                    <input type="text" class="inpNomEditarRest form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" value="<%= precio %>" name="precio">
                                </div>
                            </div>
    
                            <div class="col-md-9 d-none d-md-block mb-3 my-3 my-md-0">
                                <div class="input-group input-group-sm shadow-sm">
                                    <span class="input-group-text" id="inputGroup-sizing-sm">Url Imagen</span>
                                    <input type="text" class="inpNomEditarRest form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" value="<%= imagen %>" name="url">
                                </div>
                            </div>
                            
                        </div>
    
                        <div class=" mb-3 my-3">
                            <div class="input-group input-group-sm shadow-sm">
                                <span class="input-group-text" id="inputGroup-sizing-sm">Nombre</span>
                                <input type="text" class="inpNomEditarRest form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" value="<%= nombre %>" name="nombre">
                            </div>
                        </div>
                        
                        <div class=" my-md-3 mt-2">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text">Descripcion</span>
                                <textarea class="form-control" aria-label="Descripcion" name="descripcion"><%= descripcion %></textarea>
                            </div>
                        </div>
                        <!-- Boton submit -->
                        <div class="my-2 container">
                        <div class="row">
                            <div class="col-12 col-md-6 col-lg-4 d-grid px-5 py-2 px-md-2 ">
                            <input type="submit" class="btn btn-success" value="Guardar">
                            </div>
                        </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
        





        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>
        <script src="../resources/js/funciones.js"></script>
        <script src="../resources/js/platillo.js"></script>
    </body>