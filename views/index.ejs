<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CRUD Deli-Delivery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="resources/css/index.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>
  </head>
  <body>

    <main class="vh-100 d-flex flex-column ">
      <nav class="navbar bg-dark">
          <div class="container-fluid d-flex">
            <a class="navbar-brand" href="#">
              <img src="resources/img/logoNavBar.png" alt="Logo" width="35" height="35" class="d-inline-block align-text-top">
              <!-- se comento para no tener que estar logeando --><% /* if(login) {  */%>
                <strong class="mx-2 text-white"><%=name%></strong>
                  <a class="text-white" href="/logout">Cerrar sesion</a> 
                  <!-- <% /* }else{ */ %>
                    <a class="text-white" href="/login">Iniciar sesión</a> 
                    <% /* } */ %> -->
          </div><!--  -->
      </nav>
      <% /* if(login) { */ %>
        <section>
          <div class="px-3 mt-4">
            <!-- checkbox para habilitar o deshabilitar pagina de entregas -->
            <div class="checkPaginaAbierta form-check form-switch mt-2 d-flex justify-content-end">
                  <input class="form-check-input me-1" type="checkbox" role="switch" id="flexSwitchCheckChecked">
                  <label class="form-check-label" for="flexSwitchCheckChecked"><strong class="text-primary">Pagina Abierta</strong></label>
            </div>
            <!-- boton Nuevo Restaurante y buscador -->
            <div class="container-fluid p-0 my-4">
              <div class="row">
                <div class="col-md-4 col-lg-6">
                  <button id="btnNuevoRest" class="btn d-flex align-items-center btn-outline-success" data-bs-toggle="modal" data-bs-target="#modalNuevoRest">
                    <img class="me-2" src="./resources/img/icons/add.png" alt="">
                    Nuevo Restaurante
                  </button>
                </div>
      
                <div class="col-md-8 col-lg-6 mt-4 mt-md-0 ">
                  <div class="input-group">
                    <input id="inputBuscador" type="text" class="form-control" placeholder="Buscar Restaurante" aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button id="btnBuscador" class="btn btn-outline-secondary" type="button" id="button-addon2">
                      <img src="./resources/img/icons/buscar.png" alt="">
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <!-- modal para nuevo restaurante -->
            <div id="modalNuevoRest" class="modal fade" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-fullscreen-md-down">
                <form action="/"  method="POST" enctype="multipart/form-data">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel">Nuevo Restaurante</h1>
                      <button type="button" class="btnCerrarModalNuevoRest btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input id="inpImgNuevoRest" name="imagen" class="d-none" type="file">
                        <div class="contSubirImg d-flex flex-column justify-content-center align-items-center">
                          <img class="imgNuevoRest" src="./resources/img/icons/uploadImg.png" alt="">
                        </div>
                        <div class="mb-3">
                          <label for="inpNombNuevoRest" class="col-form-label">Nombre:</label>
                          <input type="text" class="form-control" id="inpNombNuevoRest" name="nombre" required>
                        </div>
                        <div class="mb-3">
                          <label for="inpUbicNuevoRest" class="col-form-label">Ubicación:</label>
                          <input type="text" class="form-control" id="inpUbicNuevoRest" name="ubicacion" required>
                        </div>
                        <div class="mb-3 container-fluid">
                          <div class="row">
                            <div class="col">
                              <label for="inpAperNuevoRest" class="col-form-label">Apertura:</label>
                              <input type="time" class="form-control" id="inpAperNuevoRest" name="apertura" required>
                            </div>
                            <div class="col">
                              <label for="inpCierNuevoRest" class="col-form-label">Cierre</label>
                              <input type="time" class="form-control" id="inpCierNuevoRest" name="cierre" required>
                            </div>
                          </div>
                        </div>
                        <div class="d-flex flex-column y-3">
                          <div class="p-2 container-fluid">
                            <p class="mb-3">Categoria del restaurante:</p>
                            <div class="row">
                              <div class="col-6 ">
                                <div class="form-check">
                                  <input class="checkCateNuevoRest form-check-input" type="checkbox" value="Mexicana" name="mexicana">
                                  <label class="form-check-label" for="Mexicana">
                                    Mexicana
                                  </label>
                                </div>
                                <div class="form-check">
                                  <input class="checkCateNuevoRest form-check-input" type="checkbox" value="Americana" name="americana">
                                  <label class="form-check-label" for="Americana">
                                    Americana
                                  </label>
                                </div>
                                
                                <div class="form-check">
                                  <input class="checkCateNuevoRest form-check-input " type="checkbox" value="Asiatica" name="asiatica">
                                  <label class="form-check-label" for="Asiatica">
                                    Asiatica
                                  </label>
                                </div>

                                <div class="form-check">
                                  <input class="checkCateNuevoRest form-check-input" type="checkbox" value="Pizza" name="pizza">
                                  <label class="form-check-label" for="Pizza">
                                    Pizza
                                  </label>
                                </div>
                              </div>
                              <div class="col-6">
                                <div class="form-check">
                                  <input class="checkCateNuevoRest form-check-input" type="checkbox" value="Postres" name="postres">
                                  <label class="form-check-label" for="Postres">
                                    Postres
                                  </label>
                                </div>
                                <div class="form-check">
                                  <input class="checkCateNuevoRest form-check-input" type="checkbox" value="Panaderia" name="panaderia">
                                  <label class="form-check-label" for="Panaderia">
                                    Panaderia
                                  </label>
                                </div>
                                <div class="form-check">
                                  <input class="checkCateNuevoRest form-check-input" type="checkbox" value="Pollo" name="pollo">
                                  <label class="form-check-label" for="Pollo">
                                    Pollo
                                  </label>
                                </div>
                                <div class="form-check">
                                  <input class="checkCateNuevoRest form-check-input" type="checkbox" value="Todo" name="todo" checked>
                                  <label class="form-check-label" for="Todo">
                                    Todo
                                  </label>
                                </div>
                              </div>
        
                            </div>
                          </div>
                        </div>
                        
                        <div class=" d-flex flex-column mb-3 my-md-3">
                          <div class="p-2 container-fluid">
                            <p class="mb-3">Dias Abierto:</p>
                            <div class="row justify-content-evenly">
                              <div class="col-6 ">
                                <div class="form-check">
                                  <input class="checkDiaNuevoRest form-check-input" type="checkbox" value="Lunes" id="flexCheckDefault" name="lunes">
                                  <label class="form-check-label" for="flexCheckDefault">
                                    Lunes
                                  </label>
                                </div>
                                <div class="form-check">
                                  <input class="checkDiaNuevoRest form-check-input" type="checkbox" value="Martes" id="flexCheckDefault" name="martes">
                                  <label class="form-check-label" for="flexCheckDefault">
                                    Martes
                                  </label>
                                </div>
                                <div class="form-check">
                                  <input class="checkDiaNuevoRest form-check-input" type="checkbox" value="Miercoles" id="flexCheckDefault" name="miercoles">
                                  <label class="form-check-label" for="flexCheckDefault">
                                    Miercoles
                                  </label>
                                </div>
                                <div class="form-check">
                                  <input class="checkDiaNuevoRest form-check-input" type="checkbox" value="Jueves" id="flexCheckDefault" name="jueves">
                                  <label class="form-check-label" for="flexCheckDefault">
                                    Jueves
                                  </label>
                                </div>
                              </div>
                              <div class="col-6">
                                <div class="form-check">
                                  <input class="checkDiaNuevoRest form-check-input" type="checkbox" value="Viernes" id="flexCheckDefault" name="viernes">
                                  <label class="form-check-label" for="flexCheckDefault">
                                    Viernes
                                  </label>
                                </div>
                                <div class="form-check">
                                  <input class="checkDiaNuevoRest form-check-input" type="checkbox" value="Sabado" id="flexCheckDefault" name="sabado">
                                  <label class="form-check-label" for="flexCheckDefault">
                                    Sabado
                                  </label>
                                </div>
                                <div class="form-check">
                                  <input class="checkDiaNuevoRest form-check-input" type="checkbox" value="Domingo" id="flexCheckDefault" name="domingo">
                                  <label class="form-check-label" for="flexCheckDefault">
                                    Domingo
                                  </label>
                                </div>
                                
                              </div>
        
                            </div>
                          </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btnCerrarModalNuevoRest btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                      <button type="submit" id="btnGuardarNuevoRest" class="btn btn-primary">Crear Registro</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>

            <!-- Tabla de Restaurantes -->
            <div id="" class="contenedorRegistros container-fluid mt-3">
              <!-- cabecera -->
                <div class="titulosRegistros row text-white bg-primary ">
                    <div class="col-2 col-md-1 col-lg-1 my-0 py-1  ">ID</div>
                    <div class="col-2 col-lg-1 col-lg-1 my-0 py-1  ps-1 ps-md-2 ">Imagen</div>
                    <div class="col-5 col-md-4 col-lg-3 my-0 py-1 ">Nombre</div>
                    <div class="d-none d-md-block col-md-4 col-lg-3 my-0 py-1 ">Ubicación</div>
                    <div class="d-none d-lg-block col-lg-2 my-0 py-1 ">Horario</div> 
                    <div class="d-none d-lg-block col-lg-1 my-0 py-1 ">Estatus</div>
                </div>
            </div>
            
            <nav class=" mt-4 d-flex justify-content-center" aria-label="Page navigation example">
              <ul class="pagination">
                <li class="page-item"><button type="button" id="btnAtras" class="page-link">Anterior</button></li>
                <li id="informacion-pagina" class="page-item d-flex justify-content-center align-items-center px-3 fw-bolder text-primary border"></li>
                <li class="page-item"><button type="button" id="btnSiguiente" class="page-link">Siguiente</button ></li>
              </ul>
            </nav>
          </div>
        </section>
      <% /* }else { */ %> 
          <!-- <section class=" d-flex flex-column justify-content-center align-items-center h-50 w-75 align-self-center my-5 rounded shadow">
            <h1 >Debes Iniciar Sesion</h1>
            <a class="btn btn-outline-warning mt-4" href="/login">Iniciar sesión</a>
          </section> -->
          <% /* } */ %>

    </main>

    <!-- <script src="node_modules/bootstrap/dist/js/bootstrap.esm.min.js"></script> -->
    
    <script src="./resources/js/funciones.js"></script>
    <script src="./resources/js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


  </body>
</html>