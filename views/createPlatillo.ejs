<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>CRUD Deli-Delivery</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <link rel="stylesheet" href="../../resources/css/index.css">
    </head>
    <body>
        <section class="contenedor">
            <div class="contEditarPlatillo container my-3 shadow px-md-3 py-3  rounded-3 bg-white">
                <form class="card" method="POST" enctype="multipart/form-data">
                    <div class="card-header">
                        <strong>Nuevo Platillo</strong>
                    </div>
                    <div class="row card-body">

                        <div class="col-md-4 p-1 d-flex flex-column align-items-center justify-content-center py-md-2">
                            <div class="conImagen border rounded-2">
                                <img class="imagenEditarPlatillo rounded-2" src="../../resources/img/icons/uploadImg.png" alt="">;
                                <input class="inputImagenPlatillo form-control form-control-sm shadow-sm d-none" type="file" name="imagen" id="formFile"> 
                            </div>
                        </div>
                        
                        <div class="col-md-8 d-flex flex-column justify-content-evenly">

                            <div class=" mt-4">
                                <div class="input-group input-group-sm shadow-sm">
                                    <span class="input-group-text" id="inputGroup-sizing-sm">Precio</span>
                                    <input type="number" class="inpNomEditarRest form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" value="" name="precio">
                                </div>
                            </div>
                            <div class="mt-4">
                                <div class="input-group input-group-sm shadow-sm">
                                    <span class="input-group-text" id="inputGroup-sizing-sm">Nombre</span>
                                    <input type="text" class="inpNomEditarRest form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" value="" name="nombre">
                                </div>
                            </div>
                            
                            <div class="mt-4">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">Descripcion</span>
                                    <textarea class="form-control" aria-label="Descripcion" name="descripcion"></textarea>
                                </div>
                            </div>
                        </div>

                    </div>
    
                        
                        <!-- Boton submit -->
                        <div class="container card-footer">
                            <div class="row">
                                <div class=" d-flex justify-content-end ">
                                    <input type="submit" class="btn btn-success " value="Guardar">
                                </div>
                            </div>
                        </div>
                </form>
            </div>
        </section>
        





        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>
        <script src="../../resources/js/funciones.js"></script>
        <script src="../../resources/js/platillo.js"></script>
    </body>